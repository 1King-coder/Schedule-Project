<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
            <h1 class="dispay-2 text-center">Contacts</h1>
            <p class="text-center lead">Create or edit your contact below.</p>

        <%- include('includes/messages') %> 
        <% if (contact._id) { %> 
        <form class="form-register-contact" action="/contact/edit/<%= contact._id %>" method="POST">
        <% } else { %>
        <form class="form-register-contact" action="/contact/register" method="POST">
        <% } %>  
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="form-group mb-3">
                    <label>Name:</label>
                    <input value="<%= contact.name %>" type="text" class="form-control" name="name">
                </div>
                <div class="form-group mb-3">
                    <label>Lastname:</label>
                    <input value="<%= contact.lastname %>" type="text" class="form-control" name="lastname">
                </div>
                <div class="form-group mb-3">
                    <label>E-mail:</label>
                    <input value="<%= contact.email %>" type="email" class="form-control" name="email">
                </div>
                <div class="form-group mb-3">
                    <label>Phone:</label>
                    <input value="<%= contact.phone %>" type="tel" pattern="[0-9]{11}" class="form-control" name="phone">
                </div>

                
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
            

        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>