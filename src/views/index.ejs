<%- include('includes/head'); %>
<%- include('includes/nav'); %>

<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-5">
            <h1 class="dispay-2 text-center">Schedule</h1>
            <p class="text-center lead">Yours contacts:</p>

            <%- include('includes/messages') %> 
            <% if (contacts.length > 0) { %> 
            <div class="responsive-table">
                <table class="table my-3">
                <% contacts.forEach(contact => { %>
                    <tr>
                        <td><%= contact.name %></td>
                        <td><%= contact.lastname %></td>
                        <td><%= contact.email %></td>
                        <td><%= contact.phone %></td>
                        <td><a style="text-decoration: none;" href="/contact/index/<%= contact._id %>">Edit</a></td>
                        <td><a class="text-danger" style="text-decoration: none;" href="/contact/delete/<%= contact._id %>">Delete</a></td>
                    </tr>

                <% }); %>
                
                </table>
            </div>
            <% } else { %>
                <p class="text-center lead">There is no contacts in your schedule.</p>
            <% }; %> 
        </div>

        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>